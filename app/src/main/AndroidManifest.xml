<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.familyfriendlytabs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_smug_girl"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_smug_girl_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FamilyFriendlyTabs">
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".ScrollingActivity"
            android:exported="false" />
        <activity
            android:name=".PuzzleActivity"
            android:exported="false"
            android:label="@string/puzzle_name" />
        <activity
            android:name=".main_menu"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FamilyFriendlyTabs.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>